<Window x:Class="HallofFame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="HallofFame" Height="400" Width="380">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFD42828" Offset="0.767"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="167*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblFame" HorizontalAlignment="Left" Height="234" Margin="38,3,0,0" VerticalAlignment="Top" Width="309" BorderBrush="#FF440385" Grid.Row="1"/>
        <Button x:Name="btnExit" Content="close" HorizontalAlignment="Left" Margin="146,275,0,0" VerticalAlignment="Top" Width="75" BorderBrush="#FF8408FF" FontWeight="Bold" Background="White" Opacity="0.9" Grid.Row="1"/>
        <Label Content="Time Completed" Margin="156,4,87,2" FontWeight="Bold"/>
        <Label Content="Player Name" HorizontalAlignment="Left" Margin="26,5,0,0" VerticalAlignment="Top" Width="130" FontWeight="Bold"/>

    </Grid>
</Window>
